<%- include("partials/header") %>

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our selection of campgrounds!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
    </header>

    <div class="row" style="display: flex; flex-wrap: wrap;">
        
        
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <div class="caption">
                        <h4> <%= campground.name %> </h4>
                    </div>
                    <!-- For embedding images, don't forget the = sign and the quotation marks! -->
                    <img src="<%= campground.image %>" alt="">
                </div>
            </div>
        <% }) %>

    </div>
</div>

<%- include("partials/footer") %>